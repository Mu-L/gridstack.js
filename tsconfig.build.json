{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./angular/projects/lib/src/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.spec.ts",
    "./src/**/*.test.ts",
    "./spec/**/*",
    "./vitest.setup.ts",
    "./vitest.config.ts",
    "./angular/projects/lib/src/**/*.spec.ts",
    "./angular/projects/lib/src/test.ts",
    "./angular/projects/demo/**/*",
    "./angular/node_modules/**/*",
    "./demo/**/*",
    "./node_modules/**/*"
  ]
}
